# Example configuration for LOCAL filesystem storage
# Copy this to .env and adjust paths as needed

# Storage Backend
STORAGE_BACKEND=local

# Local Filesystem Configuration
LOCAL_ROOT_PATH=~/replay-hub-storage
# Or use an absolute path:
# LOCAL_ROOT_PATH=/mnt/videos/shadowplay

# Application Configuration
APP_HOST=0.0.0.0
APP_PORT=8080
LOG_LEVEL=INFO

# Optional Configuration
CLIPS_PER_PAGE=24
USE_PROXY_VIDEOS=true
PROXY_SUFFIX=_proxy
